<div>
  <div class="col-md-12">
    <div class="panel">
      <div class="panel-heading panel-view">
        <h2 class="heading" style="float:left;border:none;">Roles</h2>
        <div class="pull-right">
          <% if params[:deleted].to_s != "true"%>
            <%= link_to new_role_path(page: params[:page]), class: "btn btn-info" do %>
              <i class="fa fa-plus" aria-hidden="true"></i> New Role
            <% end %>
            <%= link_to roles_path(deleted: true, undeleted_users_page: params[:page]), class: "btn btn-warning btn_style" do %>
              <i class="fa fa-trash" aria-hidden="true"></i> Recycle Bin
            <% end %>
            <% else %>
              <%= link_to roles_path(page: params[:undeleted_users_page]), class: "btn btn-info" do %>
              <i class="fa fa-reply" aria-hidden="true"></i> Roles List
            <% end %>
          <% end %>
        </div>

        <hr style="margin:0 15px">
        <div class="row panel-body">
          <div id="errors_div"></div>
          <div class="col-md-offset-7 col-md-5">
          </div>
        </div>
        <div class="clearfix"></div>
        <div class="table-responsive" id="destination_list">
          <%= render 'roles_list', roles: @roles %>
        </div>
      </div>
    </div>
  </div>
</div>